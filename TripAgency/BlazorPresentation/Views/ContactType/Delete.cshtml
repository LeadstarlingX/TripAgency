@{
}
@model Application.DTOs.Common.BaseDto<int>

@{
    ViewData["Title"] = "Delete Contact Type";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Contact Type</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form asp-action="Delete" asp-route-id="@Model.Id">
            <input type="hidden" asp-for="Id" />
            <p>Are you sure you want to delete this contact type?</p>
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="ContactType" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>